model DayUseInBody {
  id          String   @id @default(cuid())
  name        String
  phone       String
  serviceType String   
  price       Float
  staffName   String
  createdAt   DateTime @default(now())
  receipts    Receipt[]
}

model Visitor {
  id        String   @id @default(cuid())
  name      String
  phone     String
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Receipt {
  id            String        @id @default(cuid())
  receiptNumber Int           @unique
  type          String        
  amount        Float
  itemDetails   String        
  paymentMethod String        @default("cash") 
  createdAt     DateTime      @default(now())
  
  memberId      String?
  member        Member?       @relation(fields: [memberId], references: [id])
  
  ptNumber      Int?          // ØªØºÙŠÙŠØ± Ù…Ù† ptId Ø¥Ù„Ù‰ ptNumber
  pt            PT?           @relation(fields: [ptNumber], references: [ptNumber])
  
  dayUseId      String?
